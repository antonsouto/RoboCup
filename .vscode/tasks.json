{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build active file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/colocarjugadores.cpp",
                "${workspaceFolder}/stringutilities.cpp",
                "${workspaceFolder}/funciones_de_juego.cpp",
                "${workspaceFolder}/calculocoordenadas.cpp",
